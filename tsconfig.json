{
  "compilerOptions": {
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,

    "paths": {
      "./*.ts": ["./*"]
    },
  },

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    },
  },

  "exclude": ["node_modules", "**/*.spec.ts"]
}